#include<stdio.h>
int fact(int n)
{
    int i = 0;
    int ret = 1;
    int sum = 0;
    for (i = 1; i <= n; i++)
    {
        ret *= i;
        sum += ret;
    }
    return sum;
}
int main()
{
    int n = 0;
    int sum = 0;
    scanf("%d", &n);
    sum = fact(n);
    printf("%d\n", sum);
    return 0;
}
